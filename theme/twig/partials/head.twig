<head>
  <title>
    {% if title %}
      {{ title }}
    {% else %}
      {% for annotation in annotations %}
          {% if loop.first %}
            {{ annotation.name }}
          {% endif %}
      {% endfor %}
    {% endif %}
  </title>
  <link rel="stylesheet" href="/a-pollo/css/a-pollo.min.css">
  <style media="screen">
    {{ global.css|raw }}
  </style>
</head>
