<main class="main">
  <h1 class="main__title">
    {{ title }}
  </h1>

  <div class="infos">
    <div class="info info--icon">
      <div class="icon-dot">
          <i class="fa fa-copy"></i>
      </div>
    </div>
    {% include '../main/render-options.twig' with { background: true, viewport: false, selector: 'render-options--info' } %}
  </div>

  <hr class="hr">

  <div class="snippets">
    {% for annotation in annotations %}
      <div class="snippets__column">
        {% include 'item.twig' %}
      </div>
    {% endfor %}
  </div>

  {{ contents }}
</main>
