<main class="main {% if metadata.hamburger %} main--hamburger {% endif %}">
  <h1 class="main__title">
    {{ title }}
  </h1>

  {% for annotation in annotations %}
    {% if loop.first %}
      {% include '../main/infos.twig' %}
    {% endif %}
    {% include 'item.twig' %}
  {% endfor %}
  {{ contents }}
</main>
