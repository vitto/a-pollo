<div class="code">
  <div class="infos">
    <div class="info">
      <div class="info__title info__title--upper">
        {{ lang|upper }}
      </div>
    </div>
  </div>

  {% if code.text %}
    {{ code.text }}
  {% endif %}

  <div class="code__snippet">
    <pre><code class="lang-{{ lang }}">{{ code.code|escape }}</code></pre>
  </div>

  {% if copy is defined or code.copy is defined %}
    <ul class="options">
      <li class="options__title">
        Code
      </li>
      <li class="options__item">
        <span class="options__action copy-snippet" data-title="Copy to clipboard" data-clipboard-text="{% if code.copy is defined %}{{ code.copy|raw|trim }}{% else %}{{ copy|raw|trim }}{% endif %}">Copy to clipboard</span>
      </li>
    </ul>
  {% endif %}
</div>
